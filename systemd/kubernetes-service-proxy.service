[Unit]
Description=Kubernetes service proxy
Requires=etcd.service
Requires=flannel.service
Requires=kubernetes-master.service
After=etcd.service
After=flannel.service
After=kubernetes-master.service

[Service]
Type=simple
Restart=on-failure
RestartSec=5
ExecStart=/usr/bin/docker run --rm --net=host --privileged gcr.io/google_containers/hyperkube:v1.0.1 /hyperkube proxy --master=http://127.0.0.1:8080 --v=2

[Install]
WantedBy=multi-user.target
