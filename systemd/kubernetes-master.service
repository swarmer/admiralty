[Unit]
Description=Kubernetes master
Requires=etcd.service
Requires=flannel.service
After=etcd.service
After=flannel.service

[Service]
Type=simple
ExecStart=/usr/bin/docker run --net=host -v /var/run/docker.sock:/var/run/docker.sock  gcr.io/google_containers/hyperkube:v0.21.2 /hyperkube kubelet --api_servers=http://localhost:8080 --v=2 --address=0.0.0.0 --enable_server --hostname_override=127.0.0.1 --config=/etc/kubernetes/manifests-multi

[Install]
WantedBy=multi-user.target
